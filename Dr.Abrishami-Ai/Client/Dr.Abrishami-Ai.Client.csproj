<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <AssemblyName>$(AssemblyName.Replace(' ', '_'))</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <Content Remove="Shared\PersonData.razor" />
    <Content Remove="Shared\Sidebar.razor" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="6.0.19" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="6.0.19" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Shared\Dr.Abrishami-Ai.Shared.csproj" />
  </ItemGroup>
	
	<Target Name="tailwind Transformer" Condition="'$(Configuration)'=='Release'" BeforeTargets="Build">
		
		<Message Text="-------- Generating Tailwind ---------" Importance="high" />
		<Exec Command="npx tailwindcss -i ./wwwroot/css/app.css -o ./wwwroot/css/tailwind.css" />
		
	</Target>
	
	<ItemGroup>
	  <UpToDateCheckInput Remove="Shared\Sidebar.razor" />
	</ItemGroup>
	
	<ItemGroup>
	  <_ContentIncludedByDefault Remove="Shared\PersonData.razor" />
	  <_ContentIncludedByDefault Remove="Shared\Sidebar.razor" />
	</ItemGroup>
	
	<ItemGroup>
	  <None Include="Shared\PersonData.razor" />
	  <None Include="Shared\Sidebar.razor" />
	</ItemGroup>
	
	<ItemGroup>
	  <UpToDateCheckInput Remove="Shared\PersonData.razor" />
	</ItemGroup>


</Project>
